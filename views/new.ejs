<%- include ('./partials/header') %>

<div class="ui main text container segment">
  <div class="ui huge header">New Blog</div>
  <form action="/blogs" method="POST" class="ui form" id="inline-btn">
    <div class="field">
      <label for="title">Title</label>
      <input type="text" name="blog[title]" id="title" placeholder="Title">
    </div>
    <div class="field">
      <label for="img">Image URL</label>
      <input type="text" name="blog[image]" id="img" placeholder="Image URL">
    </div>
    <div class="field">
      <label for="desc">Blog Post</label>
      <textarea name="blog[body]" id="desc" placeholder="Blog post goes here"></textarea>
    </div>
    <button class="ui primary button">Save</button>
  </form>
  <a href="/blogs" class="ui button">Discard</button>
</div>

<%- include ('./partials/footer') %>