<%- include ('./partials/header') %>

<div class="ui main text container segment">
  <div class="ui huge header">Edit "<%= blog.title %>" </div>
  <form id="inline-btn" action="/blogs/<%= blog._id %>?_method=PUT" method="POST" class="ui form">
    <div class="field">
      <label for="title">Title</label>
      <input type="text" name="blog[title]" id="title" value="<%= blog.title %>">
    </div>
    <div class="field">
      <label for="img">Image URL</label>
      <input type="text" name="blog[image]" id="img" value="<%= blog.image %>">
    </div>
    <div class="field">
      <label for="desc">Blog Post</label>
      <textarea name="blog[body]" id="desc" placeholder="Blog post goes here"><%= blog.body %></textarea>
    </div>
    <button class="ui primary button">Save</button>
  </form>
  <a href="/blogs/<%= blog._id %>" class="ui button">Discard</a>
</div>

<%- include ('./partials/footer') %>